- content_for :row
  - time = Time.now
  - cache [ '1.6', @orders, @orders.map { |o| o.arrives_at_valid?(time) } ] do
    .order-index-page
      - if @orders.blank?
        .intro-container
          .intro-pattern
          .intro-logo
          .text-center
            = link_to '预约服务', new_user_order_path,
              class: 'btn btn-blue btn-one-in-row'
      - else
        .order-cards-list
          = render partial: 'users/orders/order', collection: @orders
          .page-navigation
            = link_to_previous_page @orders, '上一页',
              class: 'mdl-button mdl-js-button mdl-button--accent mdl-js-ripple-effect'
            = link_to_next_page @orders, '更早的订单',
              class: 'mdl-button mdl-js-button mdl-button--accent mdl-js-ripple-effect pull-right'
